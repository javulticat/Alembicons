<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.kaanelloed.iconeration.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_IconFragment"
            app:destination="@id/IconFragment" />
    </fragment>
    <fragment
        android:id="@+id/IconFragment"
        android:name="com.kaanelloed.iconeration.IconFragment"
        android:label="@string/icon_fragment_label"
        tools:layout="@layout/fragment_icon">

        <action
            android:id="@+id/action_IconFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
        <action
            android:id="@+id/action_IconFragment_to_iconPackFragment"
            app:destination="@id/iconPackFragment" />
    </fragment>
    <fragment
        android:id="@+id/iconPackFragment"
        android:name="com.kaanelloed.iconeration.IconPackFragment"
        android:label="@string/icon_pack_fragment_label"
        tools:layout="@layout/fragment_icon_pack">
        <action
            android:id="@+id/action_iconPackFragment_to_IconFragment"
            app:destination="@id/IconFragment" />
    </fragment>

</navigation>