<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/settings_ui">
        <ListPreference
            app:defaultValue="@string/settings_darkMode_def_value"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="@string/settings_darkMode_key"
            app:title="@string/settings_darkMode_label"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_icon_gen">
        <ListPreference
            app:defaultValue="@string/settings_genType_def_value"
            app:entries="@array/gen_type_entries"
            app:entryValues="@array/gen_type_values"
            app:key="@string/settings_genType_key"
            app:title="@string/settings_genType_label"
            app:useSimpleSummaryProvider="true" />

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            app:key="@string/settings_iconColor_key"
            app:title="@string/settings_iconColor_label"
            app:cpv_colorPresets="@array/custom_colors"
            app:cpv_showAlphaSlider="true" />

        <SwitchPreference
            app:defaultValue="@string/settings_includeAvailable_def_value"
            app:key="@string/settings_includeAvailable_key"
            app:title="@string/settings_includeAvailable_label" />

        <SwitchPreference
            app:defaultValue="@string/settings_applyColorAvailable_def_value"
            app:key="@string/settings_applyColorAvailable_key"
            app:title="@string/settings_applyColorAvailable_label"
            app:dependency="@string/settings_includeAvailable_key" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_pathDetection">
        <SwitchPreference
            app:defaultValue="@string/settings_includeVector_def_value"
            app:key="@string/settings_includeVector_key"
            app:title="@string/settings_includeVector_label" />

        <SwitchPreference
            app:defaultValue="@string/settings_useMonochrome_def_value"
            app:key="@string/settings_useMonochrome_key"
            app:title="@string/settings_useMonochrome_label"
            app:dependency="@string/settings_includeVector_key" />

        <SwitchPreference
            app:defaultValue="@string/settings_exportThemed_def_value"
            app:key="@string/settings_exportThemed_key"
            app:title="@string/settings_exportThemed_label"
            app:dependency="@string/settings_includeVector_key" />
    </PreferenceCategory>
</PreferenceScreen>